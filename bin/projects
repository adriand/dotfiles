#!/usr/bin/env bash

list() {
  cat "$HOME/.projects"
}

build() {
  find ~ -type d -name '.git' |
    xargs -n 1 dirname |
    grep -v "/\." |
    tee "$HOME/.projects"
}

guess() {
  projects=$(list | xargs -n 1 basename)
  match=$(echo "$projects" | matcher "$1" --limit 1)

  list | grep "$match$"
}

new() {
  git init "$1" > /dev/null

  echo "$PWD/$1"

  build &>/dev/null & # rebuild the list
}

command="$1"; shift
case "$command" in
  "") list $* ;;
  "build") build $* ;;
  "guess") guess $* ;;
  "new") new $* ;;
  *) echo "wtf are you doing" 1>&2 ;;
esac
