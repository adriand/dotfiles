[user]
  name = devlin zed
  email = me@devlinzed.com

[color]
  ui = auto

[core]
  editor = vim
  excludesfile = ~/.gitignore

[format]
  pretty = "%C(yellow)%h%Creset %s %Cgreen%cr%Creset by %an%C(bold)%d%Creset"

[init]
  templatedir = ~/.dotfiles/git/template

[pull]
  rebase = true

[push]
  default = simple
